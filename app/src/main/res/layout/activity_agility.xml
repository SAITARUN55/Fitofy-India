<?xml version="1.0" encoding="utf-8"?>

<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AgilityActivity">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageView4"
        android:layout_width="188dp"
        android:layout_height="164dp"
        android:layout_gravity="center"

        android:src="@drawable/undraw_time_management_iu" />

    <TextView
        android:id="@+id/textViewTimer"
        android:layout_width="316dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="@dimen/normal_text"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_height="44dp"
        android:text=" 00:59 " />

    <Button
        android:id="@+id/buttonStartTimer"
        android:layout_width="250dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:background="@color/colorPrimaryDark"
        android:text="START TIMER" />

    <Button
        android:id="@+id/buttonStopTimer"
        android:layout_width="250dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:background="@color/colorPrimaryDark"
        android:text="STOP TIMER" />

    <EditText
        android:id="@+id/editTextDistance"
        android:layout_width="309dp"
        android:layout_height="51dp"
        android:layout_gravity="center"
        android:ems="10"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:hint="Enter total no. of crunches "
        android:inputType="number"

        />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/undraw_healthy_habit_bhw" />


</LinearLayout>