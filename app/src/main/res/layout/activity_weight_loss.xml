<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Weight_loss">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:padding="10dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp"
            android:background="#fcfcfc"
            android:gravity="center"
            android:id="@+id/linearlayout">


            <com.google.android.material.circularreveal.cardview.CircularRevealCardView

                android:layout_width="350dp"
                android:layout_height="155dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                app:cardCornerRadius="9dp"
                app:cardElevation="8dp"
                android:id="@+id/weight_loss_tips_1"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:background="#FB6917"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="155dp"
                        android:layout_weight="1"
                        android:padding="10dp"
                        android:src="@drawable/a8" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="155dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:text="Drink Water, Especially Before Meals"
                        android:textColor="#ffffff"
                        android:textSize="25dp" />
                </LinearLayout>
            </com.google.android.material.circularreveal.cardview.CircularRevealCardView>

            <com.google.android.material.circularreveal.cardview.CircularRevealCardView
                app:cardCornerRadius="9dp"
                app:cardElevation="8dp"
                android:layout_width="350dp"
                android:layout_height="155dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"

                android:id="@+id/weight_loss_tips_2"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:background="#FB6917"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="155dp"
                        android:layout_weight="1"
                        android:padding="10dp"
                        android:src="@drawable/a2" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="155dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:text="Drink Coffee (Preferably Black)"
                        android:textColor="#ffffff"
                        android:textSize="25dp" />
                </LinearLayout>
            </com.google.android.material.circularreveal.cardview.CircularRevealCardView>


            <com.google.android.material.circularreveal.cardview.CircularRevealCardView
                app:cardCornerRadius="9dp"
                app:cardElevation="8dp"
                android:layout_width="350dp"
                android:layout_height="155dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"

                android:id="@+id/weight_loss_tips_3"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:background="#FB6917"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="155dp"
                        android:layout_weight="1"
                        android:padding="10dp"
                        android:src="@drawable/a8" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="155dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:text="Try Intermittent Fasting"
                        android:textColor="#ffffff"
                        android:textSize="25dp" />
                </LinearLayout>
            </com.google.android.material.circularreveal.cardview.CircularRevealCardView>


            <com.google.android.material.circularreveal.cardview.CircularRevealCardView
                app:cardCornerRadius="9dp"
                app:cardElevation="8dp"
                android:layout_width="350dp"
                android:layout_height="155dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"

                android:id="@+id/weight_loss_tips_4"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:background="#FB6917"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="155dp"
                        android:layout_weight="1"
                        android:padding="10dp"
                        android:src="@drawable/a11" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="155dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:text="Go on a Low-Carb Diet"
                        android:textColor="#ffffff"
                        android:textSize="25dp" />
                </LinearLayout>
            </com.google.android.material.circularreveal.cardview.CircularRevealCardView>
            <com.google.android.material.circularreveal.cardview.CircularRevealCardView
                app:cardCornerRadius="9dp"
                app:cardElevation="8dp"
                android:layout_width="350dp"
                android:layout_height="155dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"

                android:id="@+id/weight_loss_tips_5"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:background="#FB6917"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="155dp"
                        android:layout_weight="1"
                        android:padding="10dp"
                        android:src="@drawable/a2" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="155dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:text="Chew More Slowly"
                        android:textColor="#ffffff"
                        android:textSize="25dp" />
                </LinearLayout>
            </com.google.android.material.circularreveal.cardview.CircularRevealCardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>